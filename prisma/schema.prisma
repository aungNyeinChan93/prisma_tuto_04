generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String?
  email    String    @unique
  password String
  posts    Post[]
  profile  Profile?
  Product  Product[]

  @@map("users")
}

model Post {
  id        Int      @id @default(autoincrement())
  user_id   Int
  title     String
  content   String?
  image     String?
  published Boolean? @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id])

  @@index([title])
  @@map("posts")
}

model Profile {
  id     Int     @id @default(autoincrement())
  name   String?
  avator String?
  user   User    @relation(fields: [userId], references: [id])
  userId Int     @unique

  @@map("profiles")
}

model Product {
  id           Int        @id @default(autoincrement())
  user_id      Int
  title        String
  desctription String?
  price        Int?
  category     Category[]

  user User @relation(fields: [user_id], references: [id])

  @@map("products")
}

model Category {
  id        Int       @id @default(autoincrement())
  Product   Product[]
  name      String
  createdAt DateTime  @default(now())
  updateAt  DateTime  @updatedAt

  @@map("categories")
}
